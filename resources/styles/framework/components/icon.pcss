:--icon {
    &.xx-small {
        width: 1rem;
        height: 1rem;
    }

    &.x-small {
        width: 1.5rem;
        height: 1.5rem;
    }

    &.small {
        width: 2rem;
        height: 2rem;
    }

    &.medium {
        width: 3rem;
        height: 3rem;
    }

    &.large {
        width: 4rem;
        height: 4rem;
    }

    &.x-large {
        width: 6rem;
        height: 6rem;
    }

    &.xx-large {
        width: 8rem;
        height: 8rem;
    }
}
