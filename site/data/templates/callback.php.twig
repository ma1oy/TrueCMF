<div class="block_callback-wrapper">
    <div class="block_callback">
        <header class="r"><i class="fa fa-close fa-2x"></i></header>
        <form data-ajax="form"
              data-ajax-to="status"
              class="r" action="{{ home }}/callback/send" method="post">
            <label for="phone" class="r">
                <span>Ваш телефон</span>
                <input type="text" name="phone" />
            </label>
            <label for="name" class="r">
                <span>Ваше имя</span>
                <input type="text" name="name" />
            </label>
            <div class="r">
                <h3 data-ajax-put="status"></h3>
            </div>
            <div class="r">
                <input class="button_callback-send" type="submit" value="Перезвоните мне" />
            </div>
        </form>
    </div>
</div>

<script>
    var _w = $('.block_callback-wrapper');
    _w.click(function () {
        _w.remove();
    });
    _w.find('.block_callback').click(function (e) {
        e.stopPropagation();
    });
    _w.find('.block_callback > header > i').click(function () {
        _w.remove();
    });
</script>
