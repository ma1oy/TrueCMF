    </tr>
    </thead>
    <tbody data-ajax="form" data-ajax-type="json" data-ajax-to=".products-text .total-cost" class="products-body">
    {% for product in products %}
        <tr>
            <td>{{ product.code }}</td>
            <td>{{ product.vendor }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td class="price">{{ product.price }} грн.</td>
            <td class="add-to-cart">
                <form method="post" action="/cart/add/{{ product.id }}" class="add-to-cart">
                    <label for="quantity">x<input name="quantity" class="quantity" type="number" value="1" min="1" max="99" /></label>
                    <button class='field_add-button'>
                        <i class="fa fa-shopping-cart fa-lg"></i>
                    </button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
