{#<div class="block__content">#}
    <table data-ajax="load"
           data-ajax-type="json"
           data-ajax-to="products-count count-alone total-cost">
        <thead>
        <tr>
            <td>Код</td>
            <td>Поставщик</td>
            <td>Название</td>
            <td>Описание</td>
            {#<td>Цена, грн.</td>#}
            <td>Цена</td>
            <td>Кол-во</td>
            <td>Стоимость</td>
            <td>Удалить</td>
        </tr>
        </thead>
        <tbody>
        {% for product in cart %}
            <tr>
                <td>{{ product.code }}</td>
                <td>{{ product.vendor }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td class="price">{{ product.price }} грн.</td>
                <td class="cart-quantity">x{{ product.quantity }}</td>
                {#<td><label>x<input class="quantity" type="number" value="{{ product.quantity }}" min="1" max="99" /></label></td>#}
                <td class="summary">{{ product.summary }} грн.</td>
                <td class="remove">
                    <a href="{{ home }}/remove/{{ product.id }}"><i class="fa fa-close fa-lg"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr class="summary">
                <td colspan="5">Общая стоимость: </td>
                <td data-ajax-put="count-alone" class="element_products-count">x{{ session.productsCount }}</td>
                <td data-ajax-put="total-cost" class="element_total-cost">{{ session.totalCost }} грн.</td>
                <td class="remove">
                    <a href="{{ home }}/remove/all"><i class="fa fa-close fa-lg"></i></a>
                </td>
            </tr>
        </tfoot>
    </table>
    {#<input type="submit" value="Оформить заказ" />#}
    <a href="{{ home }}/order">Оформить заказ</a>
{#</div>#}
