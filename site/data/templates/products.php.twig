{% extends 'main.php.twig' %}

{% block main_content %}
  <div class="c-m-9 block__content">
    <table>
      <thead>
      <tr>
        <td>Код</td>
        <td>Поставщик</td>
        <td>Название</td>
        <td>Описание</td>
        {#<td>Цена, грн.</td>#}
        <td>Цена</td>
        <td>Купить</td>
      </tr>
      </thead>
      <tbody>
      {% for product in products %}
        <tr>
          <td>{{ product.code }}</td>
          <td>{{ product.vendor }}</td>
          <td>{{ product.name }}</td>
          <td>{{ product.description }}</td>
          <td class="price">{{ product.price }} грн.</td>
          <td class="add-to-cart">
            <label>x<input class="quantity" type="number" value="1" min="1" max="99" /></label>
            <a class='field_add-button' href="{{ home }}/addtocart/{{ product.id }}">
              <i class="fa fa-shopping-cart fa-lg"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
